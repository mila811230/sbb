<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mysite.sbb.UserMapper">
    <select id="getUserByUsername" resultType="com.mysite.sbb.User">
        SELECT id, username, created_at FROM users WHERE username = #{username};
    </select>
    
    <insert id="insertUser" parameterType="com.mysite.sbb.User">
    	INSERT INTO users (username, psw) VALUES (#{username}, #{psw});
    </insert>
</mapper>